---
import { Icon } from "astro-icon/components";
import { landingContent } from "~/ui/contents/landing";
const { services } = landingContent;
---

<!-- Bento Grid Services -->
<div id="services" class="py-24 bg-base-200">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="max-w-2xl mb-12 mx-auto text-center">
      <p class="text-base font-semibold leading-7 text-primary">
        {services.badge}
      </p>

      <h2
        class="mt-2 text-3xl font-bold tracking-tight text-base-content sm:text-4xl"
      >
        {services.title}
      </h2>
      <p class="mt-6 text-lg leading-8 text-base-content/70">
        {services.description}
      </p>
    </div>

    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[minmax(300px,_auto)]"
    >
      {
        services.items.map((item, idx) => (
          <div
            class={`group relative overflow-hidden rounded-3xl bg-base-100 border border-base-200 p-8 transition-all duration-300 shadow-sm hover:shadow-xl min-h-[320px] ${
              idx === 0
                ? "md:col-span-2 hover:border-primary/50"
                : idx === 1
                ? "md:col-span-1 hover:border-secondary/50"
                : "md:col-span-3 hover:border-accent/50 flex flex-col md:flex-row gap-8 items-center"
            }`}
          >
            {item.bgIcon && (
              <div
                class={`absolute ${
                  idx === 0 ? "top-0 right-0" : "-bottom-8 -right-8"
                } p-8 opacity-10 group-hover:opacity-20 transition-opacity`}
              >
                <Icon
                  name={item.bgIcon}
                  class={`w-48 h-48 ${
                    idx === 0 ? "text-primary" : "text-secondary"
                  }`}
                />
              </div>
            )}

            <div
              class={`relative z-10 flex flex-col h-full ${
                idx === 2 ? "flex-1" : "justify-between"
              }`}
            >
              <div>
                <div
                  class={`p-3 rounded-xl w-fit mb-6 ${
                    idx === 0
                      ? "bg-primary/10"
                      : idx === 1
                      ? "bg-secondary/10"
                      : "bg-accent/10"
                  }`}
                >
                  <Icon
                    name={item.icon}
                    class={`w-8 h-8 ${
                      idx === 0
                        ? "text-primary"
                        : idx === 1
                        ? "text-secondary"
                        : "text-accent"
                    }`}
                  />
                </div>
                <h3
                  class={`font-bold text-base-content mb-4 ${
                    idx === 1 ? "text-xl" : "text-2xl"
                  }`}
                >
                  {item.title}
                </h3>
                <p class="text-base-content/70 text-lg leading-relaxed max-w-lg">
                  {item.description}
                </p>

                {item.linkText && (
                  <div class="mt-8">
                    <span class="text-sm font-medium text-primary group-hover:translate-x-1 transition-transform inline-flex items-center gap-1">
                      {item.linkText}{" "}
                      <Icon name="heroicons:arrow-right" class="w-4 h-4" />
                    </span>
                  </div>
                )}

                {item.badges && (
                  <div class="mt-6 flex flex-wrap gap-4">
                    {item.badges.map((badge) => (
                      <div class="badge badge-outline p-3">{badge}</div>
                    ))}
                  </div>
                )}
              </div>
            </div>

            {idx === 2 && (
              <div class="flex-1 w-full bg-base-200/50 rounded-xl p-2 sm:p-4 md:p-6 font-mono text-xs md:text-sm text-base-content/80 border border-base-300 shadow-inner">
                <div class="flex gap-2 mb-4">
                  <div class="w-3 h-3 rounded-full bg-error" />
                  <div class="w-3 h-3 rounded-full bg-warning" />
                  <div class="w-3 h-3 rounded-full bg-success" />
                </div>
                <pre>
                  <code>{services.codeSnippet}</code>
                </pre>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</div>
