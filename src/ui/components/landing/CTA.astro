---
import { routes } from "~/server/contants";
---
<section class="py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="card bg-gradient-to-r from-primary/10 to-secondary/10 border border-primary/20 shadow-xl overflow-hidden relative">
      <!-- Background splash -->
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-primary/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-secondary/20 rounded-full blur-3xl"></div>
      
      <div class="card-body text-center py-16 relative z-10">
        <h2 class="text-4xl font-black mb-4">Ready to work smarter?</h2>
        <p class="text-xl text-base-content/70 mb-8 max-w-2xl mx-auto">
          Start free. Always free for small teams. Scale when you're ready.
        </p>
        <div class="card-actions justify-center gap-4">
          <a href={routes.public.login} class="btn btn-primary btn-lg shadow-lg hover:shadow-primary/50">
            Get started free
          </a>
          <a href="/pricing" class="btn btn-ghost btn-lg">
            View Pricing
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
