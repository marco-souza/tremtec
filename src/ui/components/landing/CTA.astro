---
import { Icon } from "astro-icon/components";
import { landingContent } from "~/ui/contents/landing";
const { cta } = landingContent;
---

<!-- CTA Section -->
<div
  id="contact"
  class="relative isolate overflow-hidden bg-base-100 py-16 sm:py-24 md:py-32"
>
  <div class="mx-auto max-w-7xl px-6 md:px-8">
    <div
      class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 md:max-w-none md:grid-cols-2"
    >
      <div class="text-center sm:text-left max-w-xl md:max-w-lg">
        <h2
          class="text-3xl font-bold tracking-tight text-base-content sm:text-4xl"
        >
          {cta.title}
        </h2>
        <p class="mt-4 text-lg leading-8 text-base-content/70">
          {cta.description}
        </p>
        <div class="mt-6 flex max-w-full gap-x-4">
          <a href="/contact" class="btn btn-primary btn-lg w-full sm:w-auto">
            {cta.button}
          </a>
        </div>
      </div>
      <dl class="grid grid-cols-1 gap-x-8 gap-y-10 sm:grid-cols-2 md:pt-2">
        {
          cta.features.map((feature) => (
            <div class="flex flex-col items-start">
              <div class="rounded-md bg-base-100/5 p-2 ring-1 ring-base-content/10">
                <Icon name={feature.icon} class="h-6 w-6 text-base-content" />
              </div>
              <dt class="mt-4 font-semibold text-base-content">
                {feature.title}
              </dt>
              <dd class="mt-2 leading-7 text-base-content/70">
                {feature.description}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </div>
</div>
