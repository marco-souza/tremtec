---
import { routes } from "~/server/contants";
import { landingContent } from "~/ui/contents/landing";

const { navbar } = landingContent;
---

<div
  class="navbar fixed top-0 w-full z-50 transition-all duration-300 bg-base-100/80 backdrop-blur-md border-b border-base-200/50"
>
  <div class="max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center w-full">
      <!-- Left: Logo -->
      <div class="flex-shrink-0 flex items-center gap-2">
        <a href={routes.public.home} class="flex items-center gap-2">
          <img src="/images/logo.svg" width="48" alt={`${navbar.logo} Logo`} />
          <span class="text-lg font-bold">{navbar.logo}</span>
        </a>
      </div>

      <!-- Center: Navigation (Desktop) -->
      <div class="hidden md:flex items-center space-x-8">
        {
          navbar.links.map((link) => (
            <a
              href={link.href}
              class="text-sm font-medium text-base-content/80 hover:text-primary transition-colors"
            >
              {link.label}
            </a>
          ))
        }
      </div>

      <!-- Right: CTA -->
      <div class="hidden md:flex items-center gap-4">
        <a
          href={routes.public.login}
          class="text-sm font-medium text-base-content/80 hover:text-primary transition-colors"
        >
          {navbar.cta.login}
        </a>
        <a href="#contact" class="btn btn-primary btn-sm font-medium px-6">
          {navbar.cta.getStarted}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex items-center md:hidden gap-4">
        <label
          aria-label="Open mobile menu"
          for="mobile-drawer"
          class="btn btn-square btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block w-6 h-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
      </div>
    </div>
  </div>
</div>
