---
import "~/ui/styles/global.css";

import { routes } from "~/server/contants";
import { landingContent } from "~/ui/contents/landing";

const { navbar } = landingContent;

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "TremTec",
  description = "TremTec Dashboard",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-base-100 text-base-content antialiased">
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <aside
        class="w-64 bg-base-200 border-r border-base-300 flex flex-col hidden md:flex"
      >
        <!-- Logo -->
        <div class="p-4 border-b border-base-300">
          <a
            href={routes.public.home}
            class="flex items-center gap-2 hover:opacity-80 transition-opacity"
          >
            <img
              src="/images/logo.svg"
              width="40"
              alt={`${navbar.logo} Logo`}
            />
            <span class="text-lg font-bold text-base-content">{navbar.logo}</span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 px-4 py-6">
          <div class="space-y-2">
            <a
              href={routes.public.home}
              class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-base-300 transition-colors text-base-content"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 16l4-4m0 0l4 4m-4-4v4"
                ></path>
              </svg>
              <span>Dashboard</span>
            </a>
          </div>
        </nav>

        <!-- User Section -->
        <div class="p-4 border-t border-base-300">
          <a
            href={routes.public.login}
            class="btn btn-sm btn-outline w-full"
          >
            Sign Out
          </a>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Navigation (Mobile + Desktop) -->
        <header class="bg-base-100 border-b border-base-300 px-6 py-4">
          <div class="flex items-center justify-between">
            <!-- Mobile Menu Button -->
            <button
              class="md:hidden p-2 hover:bg-base-200 rounded-lg transition-colors"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>

            <div class="flex items-center gap-4">
              <span class="text-sm text-base-content/60">{title}</span>
            </div>
          </div>
        </header>

        <!-- Content Area -->
        <main class="flex-1 overflow-y-auto p-6">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
