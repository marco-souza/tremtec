---
import { routes } from "~/server/contants";
import GitHubButton from "~/ui/components/GitHubButton.astro";
import GoogleButton from "~/ui/components/GoogleButton.astro";
import Layout from "~/ui/components/layouts/Layout.astro";
import { landingContent } from "~/ui/contents/landing";
import { loginContent } from "~/ui/contents/login";

const { navbar } = landingContent;

export const prerender = false;
---

<Layout title={loginContent.title} hideNavbar>
  <div class="min-h-screen flex items-center justify-center p-4 pt-10">
    <div
      class="card w-full max-w-lg bg-base-100/40 backdrop-blur-xl border border-white/10 shadow-2xl overflow-hidden relative group"
    >
      <!-- Glow effect on hover -->
      <div
        class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-secondary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
      >
      </div>

      <div class="card-body p-10 text-center relative z-10 gap-4">
        <a
          href={routes.public.home}
          class="flex flex-col items-center justify-center gap-4 mb-6 hover:scale-105 transition-transform cursor-pointer"
        >
          <img src="/images/logo.svg" width="64" alt={`${navbar.logo} Logo`} />
          <span class="text-4xl font-black text-base-content">
            {navbar.logo}
          </span>
        </a>

        <p class="text-base-content/60 mb-8 font-medium">
          {loginContent.welcome}
        </p>

        <div class="flex flex-col gap-4">
          <!-- Social Login Buttons need to be wrapped to maintain their internal styles or styled here -->
          <div class="hover:scale-[1.02] transition-transform duration-200">
            <GitHubButton />
          </div>

          <div class="hover:scale-[1.02] transition-transform duration-200">
            <GoogleButton />
          </div>
        </div>

        <div class="divider text-base-content/40 my-4">{loginContent.divider}</div>
        
        <div class="flex flex-col gap-4">
          <!-- Email Login -->
          <form class="flex flex-col gap-4">
            <input
              type="email"
              placeholder={loginContent.email_login.placeholder}
              class="input input-bordered w-full bg-base-100/50 border-white/20 focus:border-primary focus:ring-primary/20 transition-colors duration-300"
              required
            />
            <button
              type="submit"
              class="btn btn-primary w-full hover:scale-105 transition-transform duration-200"
            >
              {loginContent.email_login.button}
            </button>
          </form>
        </div>

        <p class="text-xs text-base-content/40">
          {loginContent.tos_privacy.text}
          <a href="#" class="link link-hover text-base-content/60"
            >{loginContent.tos_privacy.terms}
          </a>
          {loginContent.tos_privacy.and}
          <a href="#" class="link link-hover text-base-content/60"
            >{loginContent.tos_privacy.privacy}
          </a>.
        </p>
      </div>
    </div>
  </div>
</Layout>
