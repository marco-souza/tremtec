---
import AppLayout from "~/ui/components/layouts/AppLayout.astro";

export const prerender = false;
---

<AppLayout title="Dashboard">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold text-base-content">Welcome back!</h1>
      <p class="text-base-content/60 mt-2">Here's what's happening with your projects.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="card bg-base-200 shadow-sm">
        <div class="card-body">
          <p class="text-base-content/60 text-sm">Total Projects</p>
          <p class="text-3xl font-bold text-base-content">0</p>
        </div>
      </div>
      <div class="card bg-base-200 shadow-sm">
        <div class="card-body">
          <p class="text-base-content/60 text-sm">Active Tasks</p>
          <p class="text-3xl font-bold text-base-content">0</p>
        </div>
      </div>
      <div class="card bg-base-200 shadow-sm">
        <div class="card-body">
          <p class="text-base-content/60 text-sm">Team Members</p>
          <p class="text-3xl font-bold text-base-content">0</p>
        </div>
      </div>
    </div>
  </div>
</AppLayout>
